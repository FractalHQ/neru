{
    "name": "neru-monorepo",
    "private": true,
    "license": "MIT",
    "devDependencies": {
        "@changesets/cli": "^2.22.0",
        "@svitejs/changesets-changelog-github-compact": "^0.1.1",
        "@types/node": "^16.11.27",
        "tsm": "^2.2.1",
        "tsup": "^5.12.5",
        "typescript": "^4.6.3",
        "vitepress": "^0.22.3"
    },
    "scripts": {
        "dev": "pnpm -r dev --parallel",
        "dev-build": "pnpm build --parallel -- --watch",
        "dev-dev": "pnpm dev --filter dev",
        "build": "pnpm -r build && pnpm docs:build",
        "test": "pnpm -r test",
        "release": "changeset publish",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs"
    },
    "homepage": "https://github.com/ghostdevv/neru",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ghostdevv/neru"
    },
    "bugs": {
        "url": "https://github.com/ghostdevv/neru"
    },
    "packageManager": "pnpm@6.32.2",
    "engines": {
        "pnpm": "^6.7.0",
        "npm": "forbidden, use pnpm",
        "node": ">= 12"
    },
    "pnpm": {
        "overrides": {
            "neru": "workspace:*"
        }
    }
}
