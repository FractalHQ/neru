    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.mjs"
        }
    },
    "dependencies": {
        "configent": "^2.2.0",
        "recursive-readdir-sync": "^1.0.6"
    },
    "devDependencies": {
        "@types/node": "^16.3.3",
        "axios": "^0.21.1",
        "express": "^4.17.1",
        "nodemon": "^2.0.12",
        "npm-run-all": "^4.1.5",
        "tsup": "^4.12.5",
        "typescript": "^4.3.5",
        "uvu": "^0.5.1"
    },
    "peerDependencies": {
        "express": "^4.17.1"
    },
    "license": "MIT",
    "homepage": "https://github.com/NeruJS/neru",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/NeruJS/neru"
    },
    "bugs": {
        "url": "https://github.com/NeruJS/neru"
    },
    "engines": {
        "node": ">=12"
    }
