{
    "name": "neru",
    "version": "0.3.0",
    "author": "GHOST",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "description": "Neru is the file router for express.",
    "scripts": {
        "dev": "run-p dev:*",
        "dev:ts": "tsup-node --watch src",
        "dev:nodemon": "nodemon dev/index.js",
        "build": "tsup-node",
        "test": "uvu tests -b -c"
